ifeq ($(DEB_HOST_ARCH),amd64)
	CARGO_ARCH=x86_64-unknown-linux-gnu
else ifeq ($(DEB_HOST_ARCH),arm64)
	CARGO_ARCH=aarch64-unknown-linux-gnu
endif

ifeq ($(DEB_HOST_ARCH),$(DEB_BUILD_ARCH))
	TEST_COMMAND=RUSTFLAGS=-g cargo test --release
else
	TEST_COMMAND=
endif

all:
	RUSTFLAGS=-g cargo build --target $(CARGO_ARCH) --release
	mkdir -p target/release
	cp target/$(CARGO_ARCH)/release/electrs target/release

install:
	mkdir -p target/man
	cfg_me --output target/man/electrs.1 man

check:
	#$(TEST_COMMAND)

clean:
	cargo clean
