COPY_FILES=$(filter-out debian Dockerfile% %.Dockerfile docker README.md thunderhub .%, $(wildcard *)) .next

all:

install:
	npm install
	./node_modules/next/dist/bin/next build
	mkdir -p $(DESTDIR)/usr/lib/thunderhub
	mkdir -p $(DESTDIR)/usr/bin
	cp -at $(DESTDIR)/usr/lib/thunderhub $(COPY_FILES)
	cp -t $(DESTDIR)/usr/bin thunderhub

check:
